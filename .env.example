# Flask configuration
FLASK_DEBUG=true
FLASK_SECRET_KEY=change-this-in-production

# File upload settings
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=52428800

# CUPS configuration (optional, defaults to localhost)
# CUPS_SERVER=localhost
# CUPS_PORT=631

# Database configuration
# For development (SQLite):
DATABASE_URL=sqlite:///./ippweb.db
# For production (PostgreSQL):
# DATABASE_URL=postgresql://user:password@localhost:5432/ippweb

# OIDC / Keycloak configuration
OIDC_ISSUER=http://localhost:8080/realms/ippweb
OIDC_CLIENT_ID=ippweb-client
OIDC_CLIENT_SECRET=ippweb-secret

# Job settings
JOB_TIMEOUT_MINUTES=5
